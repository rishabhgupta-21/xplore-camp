<% layout('layouts/boilerplate') %>

<h1 class="text-center mb-3 mt-3">All Campgrounds</h1>

<% for(let campground of campgrounds){ %>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= campground.images[0].url %>" class="card-img-top img-fluid" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location %></small>
                </p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Visit</a>
            </div>
        </div>
    </div>
</div>

<% } %>

<div class="mb-3">
    <a href="/campgrounds/new" class="btn btn-primary">Add New Campground</a>
</div>